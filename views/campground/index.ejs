<% layout("layouts/boilerplate") %>
<h1>Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add new campground</a>

</div>

<% for(let camps of campgrounds){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="<%= camps.images.url %> " alt="..img">
        </div>
        <div class="col-md-8">
            <div class="card body">
                <h5 class="card-title"><%= camps.title %> </h5>
                <p class="card-text"><%= camps.description %> </p>
                <p class="card-text">
                    <small class="text-muted"><%= camps.locations %> </small>
                </p>
            </div>
            <a class="btn btn-primary" href="/campgrounds/<%= camps._id %> ">View <%= camps.title %> </a>
        </div>
    </div>
</div>

<% } %>